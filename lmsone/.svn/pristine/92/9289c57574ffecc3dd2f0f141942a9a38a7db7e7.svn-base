<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.happyjob.study.system.dao.NoticeDao">

	<!-- 공지사항 목록 조회 -->
	<select id = "noticeList" resultType = "kr.happyjob.study.system.model.NoticeModel">
		SELECT
				n.no 
			,	n.no_title 
			,	n.no_date
			,	u.loginID as loginID
		FROM tb_notice n 
			LEFT JOIN	tb_userinfo u
			ON			n.loginID = u.loginID
		<where>
			<if test ="(title != null) and (!title.equals(''))">
			    and no_title  Like CONCAT('%', #{title}, '%')
			</if>
			<if test ="(from_date != null) and (!from_date.equals(''))">
			    and no_date  <![CDATA[>=]]> STR_TO_DATE(#{from_date}, '%Y-%m-%d')   
			</if>			
			<if test ="(to_date != null) and (!to_date.equals(''))">
			    and no_date  <![CDATA[<=]]> STR_TO_DATE(#{to_date}, '%Y-%m-%d')   
			</if>		
		</where>
		 ORDER BY no DESC
		 LIMIT #{pageIndex}, #{pageSize}
	</select>
	
		
	<!-- 공지사항 목록 총 갯수 조회 -->
	<select id="noticeCnt" resultType="int">
		/*kr.happy.study.system.dao.NoticeDao.noticeCnt*/
		SELECT COUNT(*)
		FROM 	tb_notice
		<where>
			<if test ="(title != null) and (!title.equals(''))">
			    and no_title  Like CONCAT('%', #{title}, '%')
			</if>
			<if test ="(from_date != null) and (!from_date.equals(''))">
			    and no_date  <![CDATA[>=]]> STR_TO_DATE(#{from_date}, '%Y-%m-%d')   
			</if>			
			<if test ="(to_date != null) and (!to_date.equals(''))">
			    and no_date  <![CDATA[<=]]> STR_TO_DATE(#{to_date}, '%Y-%m-%d')   
			</if>		
		</where>
		ORDER BY no DESC
	</select>	
		
	
	
	
	<!-- 공지사항 단건 조회 : 공지제목 클릭시 -->
	<select id = "noticeDetail" resultType = "kr.happyjob.study.system.model.NoticeModel">
		SELECT
					u.loginID as loginID
				,	n.no_title
				,	n.no_content 
				,   n.no
		FROM	tb_notice n
			LEFT JOIN	tb_userinfo u
			ON			n.loginID = u.loginID
		WHERE no = #{no}
	</select>
	
		
		
	<!-- 공지사항 신규등록(저장) :  -->
	<insert id = "insertNotice" parameterType="java.util.Map">
	    <selectKey resultType="int" keyProperty="no" order="BEFORE">
            SELECT IFNULL(MAX(no),0) + 1 FROM tb_notice 
        </selectKey> 
		INSERT
		INTO		tb_notice
				(
					no, loginID, no_title, no_content, no_date
				)
		VALUES
				(
						#{no}
					,	#{loginID}
					,	#{no_title}
					,	#{no_content}
					,	NOW()
				)
	</insert>
	
	<!-- 공지사항 수정-->
	<update id = "updateNotice">
		UPDATE tb_notice
		SET		no_title = #{no_title}
				,	no_content = #{no_content}
				,	no_date = NOW()
		WHERE	no = #{no}
	</update>
	
	<!-- 공지사항 삭제-->
	<delete id="deleteNotice">
		DELETE
		FROM 	tb_notice
		WHERE 	no = #{no}
	</delete>

</mapper>

