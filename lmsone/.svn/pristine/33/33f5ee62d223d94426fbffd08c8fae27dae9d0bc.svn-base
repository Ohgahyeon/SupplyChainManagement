<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.happyjob.study.mng.dao.QnaDao">

	<select id="selectListCnt" parameterType="hashMap" resultType="_int">
		SELECT count(*) 
		  FROM tb_board B INNER JOIN tb_userinfo UI 
		    ON B.loginID = UI.loginID
		 WHERE B.board_type = 3 
		<if test='qnaSearchKind=="title"'>
		   AND B.board_nm LIKE #{qnaSearchKeyword}
		</if>
		<if test='qnaSearchKind=="name"'>
		   AND UI.name LIKE #{qnaSearchKeyword}
		</if>
	</select>
	
	<select id="selectList" parameterType="hashMap" resultType="QnaDto">
		SELECT B.board_no,B.board_nm,B.board_date,UI.name, UI.user_type  
		  FROM tb_board B INNER JOIN tb_userinfo UI 
		    ON B.loginID = UI.loginID
		 WHERE B.board_type = 3 
		 <if test='qnaSearchKind=="title"'>
		   AND B.board_nm LIKE #{qnaSearchKeyword}
		 </if>
		 <if test='qnaSearchKind=="name"'>
		   AND UI.name LIKE #{qnaSearchKeyword}
		 </if>
      ORDER BY B.board_date DESC, B.board_no DESC
	</select>
	
	<select id="selectQnaDetail" resultType="QnaDto">
		SELECT *
		  FROM tb_board 
		 WHERE board_no = #{board_no}
	</select>
	
	<insert id = "insertQna" parameterType="QnaDto">
	    <selectKey resultType="_int" keyProperty="board_No" order="BEFORE">
            SELECT IFNULL(MAX(board_no),0) + 1 FROM tb_board 
        </selectKey> 
		INSERT
		INTO		tb_board
				(
					board_no, loginID, board_nm, board_content, board_date, board_type
				)
		VALUES
				(
						#{board_No}
					,	#{loginID}
					,	#{board_Nm}
					,	#{board_Content}
					,	NOW()
					, 	3
				)
				
	</insert>
	
	<update id="updateQna"  parameterType="QnaDto">
		UPDATE tb_board
		   SET board_nm = #{board_Nm}, board_content = #{board_Content} 
		 WHERE board_no = #{board_No}		   
	</update>
	
	<delete id="deleteQna">
		DELETE FROM tb_board 
			  WHERE board_no = #{board_No}
	</delete>
</mapper>






