	<select id="selectListCnt" parameterType="hashMap" resultType="_int">
		SELECT COUNT(*) 
		  FROM tb_board 
		 WHERE board_type = 0  
		<if test='noticeSearchKind=="title"'>
			AND board_nm LIKE #{noticeSearchKeyword}
		</if>
		<if test='noticeSearchKind=="content"'>
			AND board_content LIKE #{noticeSearchKeyword}
		</if>
	</select>
	
	<select id="selectList" parameterType="hashMap" resultType="NoticeDTO">
		SELECT board_no, loginID, board_nm, board_date, view_cnt 
		  FROM tb_board
		 WHERE board_type = 0   		
		<if test='noticeSearchKind=="title" and sortCondition=="desc"'>
			AND board_nm LIKE #{noticeSearchKeyword} order by board_date DESC
		</if>
		<if test='noticeSearchKind=="title" and sortCondition=="asc"'>
			AND board_nm LIKE #{noticeSearchKeyword} order by board_date
		</if>
		<if test='noticeSearchKind=="content" and sortCondition=="desc"'>
			AND board_content LIKE #{noticeSearchKeyword} order by board_date DESC
		</if>
		<if test='noticeSearchKind=="content" and sortCondition=="asc"'>
			AND board_content LIKE #{noticeSearchKeyword} order by board_date 
		</if>
	</select>

	<insert id = "insertNotice" parameterType="NoticeDTO">
	    <selectKey resultType="_int" keyProperty="board_No" order="BEFORE">
            SELECT IFNULL(MAX(board_no),0) + 1 FROM tb_board 
        </selectKey> 
		INSERT
		INTO		tb_board
				(
					board_no, loginID, board_nm, board_content, board_date, board_type, view_cnt
				)
		VALUES
				(
						#{board_No}
					,	#{loginID}
					,	#{board_Nm}
					,	#{board_Content}
					,	NOW()
					,	0
					, 	default
				)
				
	</insert>
	
	<select id="selectDetail" resultType="NoticeDTO">
		SELECT board_no, loginID, board_nm, board_content, board_date,view_cnt
		FROM   tb_board 
		WHERE  board_no = #{board_No}
	</select>
	
	<update id="updateNotice" parameterType="NoticeDTO">
		UPDATE tb_board 
		   SET board_nm = #{board_Nm} , board_content = #{board_Content} 
		 WHERE board_no = #{board_No}
	</update>
	
	<update id="updateNoticeCtn">
		UPDATE tb_board 
		   SET view_cnt = view_cnt+1 
		 WHERE board_no = #{board_No}
	</update>
	
	<delete id="deleteNotice">
		DELETE FROM tb_board 
		WHERE  board_no = #{board_No}
	</delete>
	
	<!-- 수정후 -->
	<!-- 공지사항 목록 조회 -->
	<select id = "mainNoticeList" resultType = "NoticeDTO">
		SELECT
				board_no
			,	board_nm
			,	DATE_FORMAT(board_date, '%Y-%m-%d') as board_date
			,	loginID 
		FROM tb_board  
		WHERE board_type = '0' 
		 ORDER BY board_date DESC
		 LIMIT #{pageIndex}, #{pageSize}
	</select>	

	<!-- 공지사항 목록 총 갯수 조회 -->
	<select id="mainNoticeCnt" resultType="_int">
		SELECT COUNT(*)
		FROM 	tb_board 
		WHERE board_type = '0' 
	</select>
	
