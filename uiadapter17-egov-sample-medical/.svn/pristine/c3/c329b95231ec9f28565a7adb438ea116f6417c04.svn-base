*/
this.fnCallback = function(svcID,errorCode,errorMsg)
{
	// 에러 시 화면 처리 내역
	if(errorCode != 0)
	{
		return;
	}
	
	switch(svcID)
	{
		case "search":
			//trace(this.dsSearch.saveXML());
			break;
			
		case "delSave":
			alert("삭제가 완료되였습니다.")
			this.dsList();
		break;	
			
			
		case "save":
			// 저장 되었습니다.
			this.gfnAlert("msg.save.success");	
			break;
	}
};

